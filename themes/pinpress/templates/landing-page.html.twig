{% embed 'partials/base.html.twig' %}

    {% set collection = page.collection() %}
    {% set base_url = page.url %}
    {% set feed_url = base_url %}

    {% if base_url == '/' %}
    {% set base_url = '' %}
    {% endif %}

    {% if base_url == base_url_relative %}
    {% set feed_url = base_url~'/'~page.slug %}
    {% endif  %}

    {% block content %}
        {% if page.media.images|first %}
          <div class="span12">{{ page.media.images|first.cropZoom(1140,300).html('','', 'thumb') }}</div>
	  <div class="clear"></div>
        {% endif %}


        {% include 'partials/blog_sidebar_header.html.twig' %}

<div class="post">
  <div class="entry-container">
    <div class="entry-content  single">
      <h1 class="entry-title single">{{ page.header.title }}</h1>
    {{ page.content }}

        {% for child in collection %}
        {% include 'partials/landing_item.html.twig' with {'page':child, 'truncate':true} %}
        {% endfor %}

        {% if config.plugins.pagination.enabled and collection.params.pagination %}
        {% include 'pagination.html.twig' with {'pagination':collection.params.pagination} %}
        {% endif %}
</div>
</div>
</div>
        {% include 'partials/blog_sidebar_footer.html.twig' %}
    {% endblock %}

{% endembed %}


